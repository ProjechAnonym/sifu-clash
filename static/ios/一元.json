{
  "log": {
    "level": "info",
    "output": "/opt/singbox/singbox.log",
    "timestamp": true
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "path": "/opt/singbox/cache.db"
    },
    "clash_api": {
      "external_controller": "0.0.0.0:9090",
      "external_ui": "ui",
      "external_ui_download_detour": "select",
      "external_ui_download_url": "https://github.com/MetaCubeX/Yacd-meta/archive/gh-pages.zip",
      "secret": "123456"
    }
  },
  "inbounds": [
    {
      "address": [
        "172.18.0.1/30",
        "fdfe:dcba:9876::1/126"
      ],
      "auto_route": true,
      "interface_name": "tun0",
      "mtu": 9000,
      "stack": "mixed",
      "strict_route": true,
      "tag": "tun-in",
      "type": "tun"
    }
  ],
  "dns": {
    "final": "external",
    "strategy": "prefer_ipv4",
    "fakeip": {
      "enabled": false
    },
    "servers": [
      {
        "tag": "external",
        "address": "tls://8.8.4.4",
        "address_strategy": "ipv4_only",
        "strategy": "prefer_ipv4",
        "detour": "select"
      },
      {
        "tag": "internal",
        "address": "tls://223.5.5.5",
        "address_strategy": "ipv4_only",
        "strategy": "prefer_ipv4",
        "detour": "direct"
      },
      {
        "tag": "dns_block",
        "address": "rcode://refused"
      }
    ],
    "rules": [
      {
        "outbound": "any",
        "server": "internal"
      },
      {
        "rewrite_ttl": 43200,
        "rule_set": "geosite-cn",
        "server": "internal"
      },
      {
        "invert": true,
        "rewrite_ttl": 43200,
        "rule_set": "geosite-cn",
        "server": "external"
      }
    ]
  },
  "route": {
    "rule_set": [
      {
        "type": "remote",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geoip/rule-set/geoip-cn.srs",
        "format": "binary",
        "tag": "geoip-cn",
        "download_detour": "select",
        "update_interval": "1d"
      },
      {
        "type": "remote",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-cn.srs",
        "format": "binary",
        "tag": "geosite-cn",
        "download_detour": "select",
        "update_interval": "1d"
      }
    ],
    "rules": [
      {
        "outbound": "dns-out",
        "port": 53
      },
      {
        "outbound": "dns-out",
        "protocol": "dns"
      },
      {
        "ip_is_private": true,
        "outbound": "direct"
      },
      {
        "outbound": "block",
        "protocol": [
          "quic"
        ]
      },
      {
        "mode": "and",
        "outbound": "select",
        "rules": [
          {
            "invert": true,
            "rule_set": "geosite-cn"
          },
          {
            "invert": true,
            "rule_set": "geoip-cn"
          }
        ],
        "type": "logical"
      },
      {
        "mode": "and",
        "outbound": "direct",
        "rules": [
          {
            "rule_set": "geosite-cn"
          },
          {
            "rule_set": "geoip-cn"
          }
        ],
        "type": "logical"
      }
    ],
    "final": "select",
    "auto_detect_interface": true
  },
  "outbounds": [
    {
      "tag": "dns-out",
      "type": "dns"
    },
    {
      "tag": "direct",
      "type": "direct"
    },
    {
      "tag": "block",
      "type": "block"
    }
  ]
}